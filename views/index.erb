<div id="index">
  <div>
    <% @needs.first(5).each do |need| %>
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="need-item">
        <div class="need-img">
            <img src="https://s3.amazonaws.com/quipley-development/images/<%= need['id'] %>_thumb.png">
         </div>
         <div class="need-name">
            <a href="/register?need_id=<%= need['id']%>&need_name=<%= need['name']%>&need_community_name=<%= need['community_name']%>">
              <%= need['name'] %>
            </a>
          </div>
          <div class="need-detail">
            <p>
              <b><%= need['community_name'] %></b><br>
              <%= need['city'] %>, <%= Madison.get_abbrev need['state'] %>
            </p>
          </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="modal fade successModal" id="indexModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
           <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel" style="text-align:center">Thank You!</h4>

        </div>
        <div class="modal-body" style="text-align:center">
          You will receive an email notification shortly about your event.
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>



</div>
